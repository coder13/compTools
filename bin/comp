#!/usr/bin/env node

const commands = require('../commands');

// eslint-disable-next-line no-unused-expressions
require('yargs')
  .option('auth', {
    alias: 'a',
    type: 'string',
    description: 'Authorization Token',
  })
  .command('psych <comp> <event>', 'Get the psych sheet for the given event', (yargs) => {
    yargs
      .positional('sort', {
        describe: 'Sort by: single | average',
        default: 'single',
      });
  }, (argv) => {
    commands.psych(argv);
  })
  .command('prizes <comp>', 'Get prize money for competitions based on thecubicle\'s scheme', {}, (argv) => {
    commands.prizes(argv);
  })
  .demandCommand()
  .help()
  .argv;
